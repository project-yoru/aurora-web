%header.navbar-fixed
  %nav
    .nav-wrapper
      %a.brand-logo.center
        = image_tag 'aurora_logo_hollow_white.png', size: '48x48', style: 'margin-top: 5px'
      %ul.hide-on-med-and-down
        %li
          - if user_signed_in?
            = link_to 'My Projects', projects_path
        -# %li
        -#   = link_to 'Explore', '#'
        %li
          %a{ href: 'http://guides.aurora.project-yoru.com', target: '_blank' } Guides
        %li
          = link_to 'Docs', '#'
      %ul.right.hide-on-med-and-down
        - if user_signed_in?
          %li
            %a.dropdown-button{ href: '#!', data: { activates: 'dropdown-navbar-account' } }
              = user_display_name current_user
              %i.material-icons.right arrow_drop_down
            %ul#dropdown-navbar-account.dropdown-content
              %li
                %a.grey-text{href: '#'} Account
              %li.divider
              %li
                = link_to 'Sign out', destroy_user_session_path, method: :delete
        - else
          %li
            = link_to omniauth_authorize_path(:user, :github) do
              Sign in with
              %i.right.material-icons.fa.fa-github
